<style>
  .sheet-wrapper {
    width: min(90vw, 460px);
  }

  .letter-sheet {
    position: relative;
    background: #fff;
    border-radius: 16px;
    padding: 28px 24px 28px;
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.12);
    border: 1px solid rgba(0, 0, 0, 0.04);
  }

  .letter-sheet::before {
    content: '';
    position: absolute;
    inset: 12px;
    border: 2px dashed rgba(0, 0, 0, 0.08);
    border-radius: 12px;
    pointer-events: none;
  }

  .sheet-inner {
    text-align: center;
    padding: 6px 4px;
  }

  .sheet-title {
    font-family: 'Dancing Script', cursive;
    font-size: 1.6rem;
    color: #ff69b4;
    margin-bottom: 10px;
  }

  .sheet-body {
    font-family: 'Dancing Script', cursive;
    font-size: clamp(1.2rem, 1.4vw + 0.9rem, 1.45rem);
    color: #5a4a4a;
    line-height: 1.7;
  }

  .sheet-signature {
    font-family: 'Dancing Script', cursive;
    font-size: clamp(1.25rem, 1.2vw + 0.9rem, 1.45rem);
    color: #4b3d3d;
    margin-top: 16px;
  }

  @media (max-width: 640px) {
    .sheet-wrapper {
      width: min(92vw, 480px);
    }
    .letter-sheet {
      padding: 28px 22px 30px;
    }
    .sheet-title {
      font-size: 1.8rem;
    }
    .sheet-body {
      font-size: 1.55rem;
      line-height: 1.8;
    }
    .sheet-signature {
      font-size: 1.4rem;
    }
  }

  /* Petal animation */
  @keyframes fall {
    0% {
      transform: translateY(-10vh) rotate(0deg);
      opacity: 0;
    }
    10% {
      opacity: 0.5;
    }
    90% {
      opacity: 0.5;
    }
    100% {
      transform: translateY(110vh) rotate(720deg);
      opacity: 0;
    }
  }
</style>
